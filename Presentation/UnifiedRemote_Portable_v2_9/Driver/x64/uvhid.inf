[Version]
Signature="$CHICAGO$"
Class=HIDClass
ClassGuid={745a17a0-74d3-11d0-b6fe-00a0c90f57da}
Provider=%VENDOR%
DriverVer=02/17/2013,22.21.21.862
CatalogFile=uvhid.cat

[SourceDisksFiles]
uvhid.sys = 99
hidkmdf.sys = 99

[SourceDisksNames]
99 = %DISK_NAME%,,,""

[DestinationDirs]
CopyFunctionDriver = 12      

[Manufacturer]
%VENDOR%=Vendor, NTAMD64, NTAMD64.6.1

; For XP and later
[Vendor.NTAMD64]
%uvhid%    = uvhid.Inst, HID\uvhid

; For Win7 and later so that we can use inbox HID-KMDF mapper
[Vendor.NTAMD64.6.1]
%uvhid%    = uvhid.Inst.Win7, HID\uvhid

;===============================================================
;   uvhid for XP thru Vista
;===============================================================
[uvhid.Inst.NT]
CopyFiles = CopyFunctionDriver

[uvhid.Inst.NT.HW]
AddReg = uvhid_Parameters.AddReg 

;
; uvhid is the function driver and hidkmdf is the WDM HID minidriver
;
[uvhid.Inst.NT.Services]
AddService = hidkmdf,,hidkmdf_Service_Inst,
AddService = uvhid,0x00000002, uvhid_Service_Inst

[CopyFunctionDriver]
hidkmdf.sys

[uvhid_Parameters.AddReg]
HKR,,"UpperFilters",0x00010000,"hidkmdf"

[hidkmdf_Service_Inst]
DisplayName    = %hidkmdf.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START 
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\hidkmdf.sys
LoadOrderGroup = PNP Filter


;===============================================================
;   uvhid for Win7
;   Instead of using hidkmdf.sys as a filter, use the inbox 
;   mshidkmdf.sys as a mapper filter
;===============================================================
[uvhid.Inst.Win7.NT]
; Just copy the driver. No neeed to copy other system binaries.
CopyFiles = CopyFunctionDriver

[uvhid.Inst.Win7.NT.HW]
AddReg = uvhid_Win7_Parameters.AddReg 

;
; uvhid is the function driver and mshidkmdf is the WDM HID minidriver
;
[uvhid.Inst.Win7.NT.Services]
AddService = uvhid,0x00000002, uvhid_Service_Inst

[uvhid_Win7_Parameters.AddReg]
HKR,,"UpperFilters",0x00010000,"mshidkmdf"

;===============================================================
;   Sections common to all OS versions
;===============================================================

[CopyFunctionDriver]
uvhid.sys

[uvhid_Service_Inst]
DisplayName    = %uvhid%
ServiceType    = %SERVICE_KERNEL_DRIVER% 
StartType      = %SERVICE_DEMAND_START% 
ErrorControl   = %SERVICE_ERROR_IGNORE% 
ServiceBinary  = %12%\uvhid.sys 

;================================================================
;--- WDF Coinstaller installation ------
;
[DestinationDirs]
uvhid.Inst_CoInstaller_CopyFiles = 11

[uvhid.Inst.NT.CoInstallers]
AddReg=uvhid.Inst_CoInstaller_AddReg
CopyFiles=uvhid.Inst_CoInstaller_CopyFiles

[uvhid.Inst_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller01009.dll,WdfCoInstaller"

[uvhid.Inst_CoInstaller_CopyFiles]
WdfCoInstaller01009.dll,,,0x00000010    ;COPYFLG_NO_OVERWRITE (for win2k)

[SourceDisksFiles]
WdfCoInstaller01009.dll=99 ; make sure the number matches with SourceDisksNames

[uvhid.Inst.NT.Wdf]
KmdfService = uvhid, uvhid_wdfsect
[uvhid_wdfsect]
KmdfLibraryVersion = 1.9

[Strings] 
;  *******Localizable Strings******* 
VENDOR         = "Unified Intents AB" 
uvhid         = "Unified Virtual HID" 
DISK_NAME      = "Unified Virtual Device Install Disk"
hidkmdf.SVCDESC= "Filter Driver Service for HID-KMDF Interface layer"

;  *******Non Localizable Strings******* 

SERVICE_BOOT_START     = 0x0 
SERVICE_SYSTEM_START   = 0x1 
SERVICE_AUTO_START     = 0x2 
SERVICE_DEMAND_START   = 0x3 
SERVICE_DISABLED       = 0x4 

SERVICE_KERNEL_DRIVER  = 0x1 
SERVICE_ERROR_IGNORE   = 0x0 
SERVICE_ERROR_NORMAL   = 0x1 
SERVICE_ERROR_SEVERE   = 0x2 
SERVICE_ERROR_CRITICAL = 0x3 

REG_EXPAND_SZ          = 0x00020000 
REG_DWORD              = 0x00010001 
REG_MULTI_SZ           = 0x00010000
REG_BINARY             = 0x00000001
REG_SZ                 = 0x00000000

